<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/nabDrawableCut"
    android:padding="@dimen/nab_margin_xxl"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <au.com.nab.presentation.productdetail.ProductEligibilityView
            android:id="@+id/eligibilityView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nab_margin_xl"
            android:visibility="gone"/>

        <au.com.nab.presentation.productdetail.ProductRateView
            android:id="@+id/rateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nab_margin_xl"
            android:visibility="gone"/>

        <au.com.nab.presentation.productdetail.ProductFeatureView
            android:id="@+id/featureView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nab_margin_xl"
            android:visibility="gone"/>

        <au.com.nab.presentation.productdetail.ProductFeeView
            android:id="@+id/feeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nab_margin_xl"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>